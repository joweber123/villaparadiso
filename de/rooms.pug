mixin btn(link, text)
  .btn
    a(href=link)=text
    svg.arrow
      defs
        marker#m(markerwidth='4', markerheight='8', refx='0', refy='1', viewbox='0 0 1 2')
          polygon(points='0,0 1,1 0,2', fill='#979797')
      line(x1='0', y1='50%', x2='100%', y2='50%', stroke-width='2', marker-end='url(#m)', stroke='#979797')

mixin btn-complimentary(link, text)
  .btn.btn-complimentary
    a(href=link)=text
    svg.arrow
      defs
        marker#m(markerwidth='4', markerheight='8', refx='0', refy='1', viewbox='0 0 1 2')
          polygon(points='0,0 1,1 0,2', fill='#979797')
      line(x1='0', y1='50%', x2='100%', y2='50%', stroke-width='2', marker-end='url(#m)', stroke='#979797')
include ./includes/head.pug
include ./includes/header.pug
.page-wrapper.pages-wrapper
  section.pages-hero-wrapper
    img(src='../assets/img/rooms/rooms-1.jpg')
    .page-section-text.pages-hero
      h2 Zimmer und Frühstück
      p Jedes unserer  Zimmer ist verschieden eingerichtet, hat ein eigenes Badezimmer und bietet eine wunderschöne Aussicht auf das Meer.

  section.left-text-box
    img(src='../assets/img/rooms/rooms-2.jpg')
    .page-section-text
      h2 Zimmerauswahl
      p Es gibt Einzel-, Zweibett-, Doppel-und Dreibettzimmern mit der möglichen Zugabe von Kinderbetten nach Ihren Bedürfnissen.
  section.right-text-box
    img(src='../assets/img/rooms/rooms-3.jpg')
    .page-section-text
      h2 Frühstück
      p  Frühstück ist inklusive, es ist Unwichtig, ob Sie ausschlafen oder früh für einen Ausflug aufbrechen wollen, jeden Morgen werden Sie vom Kaffeearoma, frische Brötchen und leckere Marmelade empfangen.
  section.bottom-padding.left-text-box
    img(src='../assets/img/rooms/rooms-4.jpg')
    .page-section-text
      h2 Kommen Sie zu uns
      p Wir werden gerne ihre wünsche und bedürfnisse entgegennehmen und befriedigen.
      +btn-complimentary('contact.html', 'Kontakte')
  include ./includes/footer.pug
